{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<div class="pagination-wrapper">
    <ul class="pagination">
       {# {% if first is defined and current != first %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" aria-label="First">
                <span aria-hidden="true">&laquo;&laquo;</span>
            </a>
        </li>
        {% endif %}#}

        {% if previous is defined %}
        <li class="{{ previous is defined ? '' : 'disabled' }}">
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Previous">
                <span aria-hidden="true"></span>
            </a>
        </li>
        {% else %}
            <li class="disabled">
                <span aria-label="Previous">
                    <span aria-hidden="true"></span>
                </span>
            </li>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="active">
                    <span>{{ page }} <span class="sr-only">(current)</span></span>
                </li>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Next">
                    <span aria-hidden="true"></span>
                </a>
            </li>
        {% else %}
            <li class="disabled">
                <span aria-label="Next">
                    <span aria-hidden="true"></span>
                </span>
            </li>
        {% endif %}

        {#{% if last is defined and current != last %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" aria-label="Last">
                    <span aria-hidden="true">&rang;&rang;</span>
                </a>
            </li>
        {% endif %}#}
    </ul>
</div>
{% endif %}
