<div class="container">
  <h2 class="section-title">Nos r√©alisations</h2>
  <div class="row">
    <div class="cycle-slideshow"
      data-cycle-fx=carousel
      data-cycle-carousel-visible=5
      data-cycle-carousel-fluid=true
      data-cycle-slides="div"
      data-cycle-pause-on-hover=true>
      {% for actuality in actualities %}
        <div class="col-xs-3">
          <a href="{{actuality.link}}">
            <h3>{{actuality.title}}</h3>
            <p>{{actuality.subtitle}}</p>
            <img src="{{ vich_uploader_asset(actuality, 'image') }}" alt="{{ actuality.title }}" />
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
