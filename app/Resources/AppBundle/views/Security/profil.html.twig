{% extends "::base.html.twig" %}

{% block breadcrumb_items %}
    <li><span>Mon profil</span></li>
{% endblock %}

{% block body %}

<div class="row">

    <!-- BEGIN MAIN CONTENT -->
    <div class="main col-sm-8 col-sm-offset-2">
        <h1 class="section-title">Mon profil</h1>
        <center>
            <p>
                Vous pouvez dès à présent rechercher une offre, mais nous vous invitons à compléter votre profil dès à présent.
                <br />
                Un profil complet est indispensable pour pouvoir répondre à une offre.
                <br />
                Voir les <a href="">Conditions générales d'utilisation</a>
            </p>
        </center>
    </div>

</div>

{{ form_start(form) }}
<div class="row">
    <div class="main col-sm-8 col-sm-offset-2">
        <h1 class="section-title">
          <i class="icon user-red-bold"></i>
          Mes informations
        </h1>

        <div class="form-contener">
            <div class="row">
                <div class="col-sm-6 inline-controls form-group">
                    {{ form_label(form.civility) }}
                    {{ form_widget(form.civility, { 'label_attr': { 'class': 'radio-inline' } }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.firstname)}}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.lastname)}}
                    {{ form_widget(form.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.birthday)}}
                    {{ form_widget(form.birthday) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.phone)}}
                    {{ form_widget(form.phone) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.email)}}
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.password)}}
                    {{ form_widget(form.password) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    {{ form_label(form.description)}}
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="row form-group form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    {{ form_widget(form.newsletter) }}
                    {{ form_label(form.newsletter) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>
        </div>

        <h1 class="section-title">
          <i class="icon struct-red-bold"></i>
          Ma structure
        </h1>

        <div class="form-contener">
            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.company)}}
                    {{ form_widget(form.company) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyStatus)}}
                    {{ form_widget(form.companyStatus) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyCreationDate)}}
                    {{ form_widget(form.companyCreationDate) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.siret)}}
                    {{ form_widget(form.siret) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.address)}}
                    {{ form_widget(form.address) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.addressSuite)}}
                    {{ form_widget(form.addressSuite) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.zipcode)}}
                    {{ form_widget(form.zipcode) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.city)}}
                    {{ form_widget(form.city) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyPhone)}}
                    {{ form_widget(form.companyPhone) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyMobile)}}
                    {{ form_widget(form.companyMobile) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 form-group">
                    {{ form_label(form.companyDescription)}}
                    {{ form_widget(form.companyDescription) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyEffective)}}
                    {{ form_widget(form.companyEffective) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyStructures)}}
                    {{ form_widget(form.companyStructures) }}
                </div>
            </div>

            <div class="row form-group" >
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companySite)}}
                    {{ form_widget(form.companySite) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.companyBlog)}}
                    {{ form_widget(form.companyBlog) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>
        </div>

        <h1 class="section-title">
          <i class="icon list-red-bold"></i>
          Mes souhaits
        </h1>

        <div class="form-contener">
            <div class="row" >
                <div class="col-sm-6 form-group">
                    {{ form_label(form.wishedSize)}}
                    {{ form_widget(form.wishedSize) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.useType)}}
                    {{ form_widget(form.useType) }}
                </div>
            </div>

            <div class="row" >
                <div class="col-sm-6 form-group">
                    {{ form_label(form.usageDate)}}
                    {{ form_widget(form.usageDate) }}
                </div>
                <div class="col-sm-6 form-group">
                    {{ form_label(form.usageDuration)}}<br />

                    <div class="row">
                      <div class="col-sm-5">
                        {{ form_widget(form.usageDuration) }}
                      </div>
                      <div class="col-sm-7">
                        {{ form_widget(form.lengthTypeOccupation) }}
                      </div>
                    </div>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-sm-12 form-group">
                    {{ form_label(form.projectDescription)}}
                    {{ form_widget(form.projectDescription) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>
        </div>

        <h1 class="section-title">
          <i class="icon soc-red-bold"></i>
          Réseaux sociaux
        </h1>

        <div class="form-contener">
            <div class="row" >
                <div class="col-sm-6 form-group">
                  <div class="input-group social-group">
                    <span class="input-group-addon"><i class="fa fa-facebook"></i></span>
                    {{ form_widget(form.facebookUrl) }}
                  </div>
                </div>
                <div class="col-sm-6 form-group">
                  <div class="input-group social-group">
                    <span class="input-group-addon"><i class="fa fa-google-plus"></i></span>
                    {{ form_widget(form.googleUrl) }}
                  </div>
                </div>
            </div>

            <div class="row" >
                <div class="col-sm-6 form-group">
                  <div class="input-group social-group">
                    <span class="input-group-addon"><i class="fa fa-twitter"></i></span>
                    {{ form_widget(form.twitterUrl) }}
                  </div>
                </div>
                <div class="col-sm-6 form-group">
                  <div class="input-group social-group">
                    <span class="input-group-addon"><i class="fa fa-linkedin"></i></span>
                    {{ form_widget(form.linkedinUrl) }}
                  </div>
                </div>
            </div>

            <div class="row" >
                <div class="col-sm-6 form-group">
                  <div class="input-group social-group">
                    <span class="input-group-addon"><i class="fa fa-instagram"></i></span>
                    {{ form_widget(form.instagramUrl) }}
                  </div>
                </div>
                <div class="col-sm-6 form-group">
                  {{ form_widget(form.otherUrl) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>

        </div>

        <h1 class="section-title">
          <i class="icon doc-red-bold"></i>
          Documents à fournir
        </h1>

        <div class="form-contener">

          <div class="row">
            <div class="col-sm-5 required-files">

              <ul class="list-unstyled">
                <li><i class="fa fa-check"></i><label class="required">Pièce d'identité</label></li>
                <li><i class="fa fa-check"></i><label class="required">Pièce d'identité</label></li>
              </ul>

            </div>

            <div class="col-sm-7">

              <label class="control-label bold">Mes téléchargements</label>

              <dl class="dl-horizontal info-block">
                <dt><i class="fa fa-info-circle"></i></dt>
                <dd>
                  Les documents suivants seront attachés à toutes vos candidatures.
                  Les fichiers complémentaires qui peuvent être joints dans toutes vos candidatures
                  doivent être téléchargés à partir de chaque fiche projet.
                </dd>
              </dl>

              <div class="files">
                <div class="file-infos">
                  <span>file_name.png</span>

                  <div class="pull-right actions">
                    <a href="#" class="btn btn-show"><i class="fa fa-search"></i></a>
                    <a href="#" class="btn btn-delete"><i class="fa fa-trash-o"></i></a>
                  </div>
                </div>
                <div class="file-infos">
                  <span>file_name.png</span>

                  <div class="pull-right actions">
                    <a href="#" class="btn btn-show"><i class="fa fa-search"></i></a>
                    <a href="#" class="btn btn-delete"><i class="fa fa-trash-o"></i></a>
                  </div>
                </div>
              </div>

              <div class="add-file">
                <h4>
                  <i class="icon small inline add-red"></i>
                  Ajouter un fichier
                </h4>

                <dl class="dl-horizontal info-block">
                  <dt><i class="fa fa-info-circle"></i></dt>
                  <dd>
                    Formats autorisés : JPG, GIF, PNG, PDF ou DOC.<br/>
                    Chaque fichier ne doit pas excéder 5MO.
                  </dd>
                </dl>


              </div>

            </div>
          </div>

        </div>

    </div>
</div>
{{ form_end(form) }}

{% endblock %}

{% block javascript %}

    {% javascripts filter='?yui_js' output='assetic/js/compiled/avocodeformextensions/form-extensions.min.js'
    'bundles/avocodeformextensions/datepicker/js/datepicker.js'
    'bundles/avocodeformextensions/datepicker/js/locales/bootstrap-datepicker.fr.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='cssrewrite,?yui_css' output='assetic/css/compiled/avocodeformextensions/form-extensions.min.css'
    'bundles/avocodeformextensions/datepicker/css/datepicker.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
    {% endstylesheets %}
{% endblock %}
