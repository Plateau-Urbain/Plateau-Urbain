{% extends "::base.html.twig" %}

{% block breadcrumb_items %}
    <li><span>Mon profil</span></li>
{% endblock %}

{% block body %}
    
<div class="row">

    <!-- BEGIN MAIN CONTENT -->
    <div class="main col-sm-8 col-sm-offset-2">
        <h1 class="section-title">Mon profil</h1>
        <center>
            <p>
                Vous pouvez dès à présent rechercher une offre, mais nous vous invitons à compléter votre profil dès à présent.
                <br />
                Un profil complet est indispensable pour pouvoir répondre à une offre.
                <br />
                Voir les <a href="">Conditions générales d'utilisation</a>
            </p>
        </center>
    </div>

</div>

{{ form_start(form) }}    
<div class="row">
    <div class="main col-sm-8 col-sm-offset-2">
        <h1 class="section-title">Mes informations</h1>

        <div class="form-contener">
            <div class="row">

                <div class="col-sm-6">
                    {{ form_label(form.civility) }}
                    {{ form_widget(form.civility, { 'label_attr': { 'class': 'radio-inline' } }) }}
                    {{ form_errors(form.civility) }}
                </div>
                <div class="col-sm-6">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.birthday) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.phone) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.password) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    {{ form_row(form.newsletter) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>
        </div>
            
        <h1 class="section-title">Ma structure</h1>

        <div class="form-contener">
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.company) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.companyStatus) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.companyCreationDate) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.siret)}}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.address)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.addressSuite) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.zipcode) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.city)}}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.companyPhone)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.companyMobile) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.companyDescription)}}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.companyEffective)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.companyStructures)}}
                </div>
            </div>

            <div class="row form-group" >
                <div class="col-sm-6">
                    {{ form_row(form.companySite)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.companyBlog)}}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>
        </div>

        <h1 class="section-title">Mes souhaits</h1>

        <div class="form-contener">
            <div class="row" >
                <div class="col-sm-6">
                    {{ form_row(form.wishedSize)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.useType)}}
                </div>
            </div>

            <div class="row" >
                <div class="col-sm-6">
                    {{ form_row(form.usageDate)}}
                </div>
                <div class="col-sm-6 pu-length-input">
                    {{ form_label(form.usageDuration)}}<br />
                    {{ form_widget(form.usageDuration) }}
                    {{ form_widget(form.lengthTypeOccupation) }}
                    {{ form_errors(form.usageDuration) }}
                </div>
            </div>

            <div class="row form-group">
                <div class="col-sm-12">
                    {{ form_row(form.projectDescription)}}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>
        </div>

        <h1 class="section-title">Réseaux sociaux</h1>

        <div class="form-contener">
            <div class="row" >
                <div class="col-sm-6">
                    {{ form_row(form.facebookUrl)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.googleUrl)}}
                </div>
            </div>

            <div class="row" >
                <div class="col-sm-6">
                    {{ form_row(form.twitterUrl)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.linkedinUrl)}}
                </div>
            </div>

            <div class="row form-group" >
                <div class="col-sm-6">
                    {{ form_row(form.instagramUrl)}}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.otherUrl)}}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Enregistrer" class="btn btn-fullcolor form-control">
                </div>
            </div>

        </div>
    </div>
</div>    
{{ form_end(form) }}
    
{% endblock %}

{% block javascript %}

    {% javascripts filter='?yui_js' output='assetic/js/compiled/avocodeformextensions/form-extensions.min.js'
    'bundles/avocodeformextensions/datepicker/js/datepicker.js'
    'bundles/avocodeformextensions/datepicker/js/locales/bootstrap-datepicker.fr.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='cssrewrite,?yui_css' output='assetic/css/compiled/avocodeformextensions/form-extensions.min.css'
    'bundles/avocodeformextensions/datepicker/css/datepicker.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
    {% endstylesheets %}
{% endblock %}