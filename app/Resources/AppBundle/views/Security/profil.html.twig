                <div class="kbis-file file-infos clearfix{% if not form.kbis.vars.valid %} has-error{% endif %}">
                  <span>Document justifiant la création de la structure</span>
                  <div class="pull-right actions">
                    <label class="custom-file-input btn btn-accepted">
                        {{ form_widget(form.kbis) }}
                        <i class="fa fa-upload"></i>
