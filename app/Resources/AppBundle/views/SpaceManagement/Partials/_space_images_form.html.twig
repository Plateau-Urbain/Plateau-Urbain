<div class="row">
  {% for image in images %}
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="{{ vich_uploader_asset(image, 'file') }}" alt="{{ image.fileName }}">
        <div class="caption clearfix">
          <span class="pull-right remove-picture">
            <a href="{{ path('space_manager_removepicture', { 'id': image.id, 'token': csrf_token('remove_image') }) }}" class="btn" role="button" data-link-method="delete">
              <i class="fa fa-times"></i>
            </a>
          </span>
          <span class="move-picture">
            <a href="{{ path('space_manager_movepicture', { 'id': image.id, 'position': image.position-1, 'token': csrf_token('move_image') }) }}" class="btn {{ loop.first ? 'disabled' :'' }}" role="button" data-link-method="post">
              <i class="fa fa-chevron-left"></i>
            </a>
            <a href="{{ path('space_manager_movepicture', { 'id': image.id, 'position': image.position+1, 'token': csrf_token('move_image') }) }}" class="btn {{ loop.last ? 'disabled' :'' }}" role="button" data-link-method="post">
              <i class="fa fa-chevron-right"></i>
            </a>
          </span>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

