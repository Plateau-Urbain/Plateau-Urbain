



<h6 >
  Nom de la pièce à joindre à la candidature
</h6>

<p>&nbsp;</p>

<div class="row">
   <div class="col-sm-7">
    {{form_widget(form.name, {'attr': {'placeholder': 'Nom de la pièce'}})}}
  </div>

  <div class="col-sm-5">
    <button value="" type="submit" name="button" class="btn btn-block form-control">Ajouter</button>
  </div>


</div>

<ul class="list-dotted">
  {% for document in documents %}
    <li class="li-icon check">
      {{document.name}}
      <a href="{{ path('space_manager_removedocument', { 'id': document.id }) }}" class="pull-right"><i class="fa fa-trash"></i></a>
    </li>
  {% endfor %}
</ul>
