{#        <h2 class="section-title animate-from-bottom animation-from-bottom" data-animation-direction="from-bottom" data-animation-delay="50">Les espaces disponibles</h2>#}

        {% if latest|length %}
            {% for space in latest %}
                <div class="item col-sm-4">
                     <div class="space_item">
                    <!-- Set width to 4 columns for grid view mode only -->
                    <a href="{{ path('space_show', {'id' : space.id}) }}" target="_blank">
                        <div class="image">
                            <img src="{% if space.pics.0 is defined %}{{ vich_uploader_asset(space.pics.0, 'file') }}{% endif %}" alt="" />
                        </div>
{#                        <div class="price_contener">
                            <span class="top">à partir de</span><br />
                            <span class="price">{{ space.price }}€</span><span> /M<sup>2</sup>/MOIS</span>
                        </div>#}
                        <div class="foot">
                            <p class="ville">{{ space.city }} ({{ space.depCode }})</p>
                            <h3>{{ space.name }}</h3>
                            <ul>
                            <li>{{ space.type }}</li>
                            <!-- AJOUT OLIVIER -->
                            <li>
                                À partir de {{ space.price * 12 }} € / m<sup>2</sup> / an
                            </li>
                            <li>
                                <strong>{{ space.parcels | length }}</strong> espaces de {{ space.minSize }} m<sup>2</sup> à {{ space.maxSize }} m<sup>2</sup>
                            </li>
                        </ul>
                        <div class="calendar"></div>
                            <div class="apply-date">
                            <p class="apply-date-p">Date limite de candidature</p>
                            <p class="apply-date-b">
                                {{ space.limitAvailability|localizeddate('long', 'none') }} à {{ space.limitAvailability|date('H') }}h
                            </p>
                            </div>
                            <!-- FIN AJOUT OLIVIER -->
                        </div>
                    </a>
                </div>
                </div>
            {% endfor %}
        {% else %}
            <em>Il n'y a aucun espace disponible actuellement</em>
        {% endif %}

{#        <h2 class="section-title animate-from-bottom animation-from-bottom" data-animation-direction="from-bottom" data-animation-delay="50">Les espaces occupés</h2>#}

        {% for space in unavailableSpaces %}
            <div class="item col-sm-4">
                <div class="space_item space_item_unavailable">
